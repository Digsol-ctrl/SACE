<%- include('../partials/header') %>

<main class="admin-container">
  <div class="admin-header">
    <h1><%= service._id ? 'Edit' : 'Add' %> Service</h1>
    <div class="admin-actions">
      <a class="btn-secondary" href="/">Home</a>
      <a href="/admin/services" class="btn-admin">Back</a>
    </div>
  </div>

  <div class="admin-card">
    <% if (errors && errors.length) { %>
      <ul><% errors.forEach(e => { %><li style="color:red"><%= e %></li><% }) %></ul>
    <% } %>

    <form class="admin-form" method="post" action="<%= service._id ? '/admin/services/' + service._id : '/admin/services' %>">
      <label>Title
        <input name="title" value="<%= service.title || '' %>" required>
      </label>

      <label>Description
        <textarea name="description"><%= service.description || '' %></textarea>
      </label>

      <div style="margin-top:12px">
        <button class="btn-admin" type="submit">Save</button>
      </div>
    </form>
  </div>
</main>

<%- include('../partials/footer') %>