<%- include('../partials/header') %>
<%- include('../partials/admin-styles') %>

<main class="admin-container">
  <div class="admin-header">
    <h1>Services</h1>
    <div class="admin-actions">
      <a class="btn-secondary" href="/admin">‚Üê Dashboard</a>
      <a class="btn-admin" href="/admin/services/new"><i class="fas fa-plus"></i> Add Service</a>
    </div>
  </div>

  <div class="admin-card">
    <table class="admin-table">
      <thead><tr><th>Title</th><th>Slug</th><th>Actions</th></tr></thead>
      <tbody>
      <% services.forEach(s => { %>
        <tr>
          <td data-label="Title"><%= s.title %></td>
          <td data-label="Slug"><%= s.slug %></td>
          <td data-label="Actions">
            <a class="icon-btn edit" href="/admin/services/<%= s._id %>/edit" title="Edit"><i class="fas fa-edit"></i></a>
            <form method="post" action="/admin/services/<%= s._id %>/delete" class="delete-form" style="display:inline">
              <button class="icon-btn delete" type="submit" title="Delete"><i class="fas fa-trash"></i></button>
            </form>
          </td>
        </tr>
      <% }) %>
      </tbody>
    </table>
  </div>
</main>

<%- include('../partials/footer') %>