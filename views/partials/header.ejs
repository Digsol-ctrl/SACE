<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title || 'Simply Amazing' %></title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/home.css">
  <link rel="stylesheet" href="/css/loader.css">
  <% if (admin) { %>
    <link rel="stylesheet" href="/css/admin.css">
  <% } %>
  <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
  <div id="site-loader" class="site-loader" role="status" aria-live="polite" aria-label="Loading content">
    <div class="loader-inner">
      <div class="loader-graphics">
        <i class="fas fa-gear gear-icon" aria-hidden="true"></i>
        <i class="fas fa-person-digging worker-icon" aria-hidden="true"></i>
      </div>
      <div class="loader-text">Loadingâ€¦</div>
      <span class="sr-only">Loading page content</span>
    </div>
  </div>
  <header class="header">
    <div class="container">
      <div class="logo">
        <a href="/">
          <div class="s">
            <img src="/images/logo.png" alt="simplyamazing" class="site-logo" loading="lazy">
          </div>
        </a>
      </div>

      <button class="mobile-menu-btn" aria-label="Toggle menu">
        <i class="fas fa-bars"></i>
      </button>
      <nav class="main-nav" aria-label="Main navigation">
        <ul>
          <% if (isAdminRoute) { %>
            <li><a href="/" class="">Home</a></li>
            <% if (admin) { %>
              <li><a href="/admin" class="">ADMIN</a></li>
            <% } %>
          <% } else { %>
            <li><a href="/#home" class="active">Home</a></li>
            <li><a href="/#about" class="">About Us</a></li>
            <li><a href="/#services" class="">Services</a></li>
            <li><a href="/#gallery" class="">Projects</a></li>
            <li><a href="/#contact" class="">Contact</a></li>
            <% if (admin) { %>
              <a href="/admin">ADMIN</a>
            <% } %>
          <% } %>
        </ul>
      </nav>
    </div>
  </header>
