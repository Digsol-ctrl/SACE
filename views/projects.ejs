<section class="projects-list section">
  <div class="container">
    <div class="projects-grid">
      <% (projects || []).forEach(p => { %>
        <article class="project-card">
          <div class="project-image">
            <img src="<%= p.imageUrl %>" alt="<%= p.title %>" loading="lazy">
          </div>
          <div class="project-body">
            <h3><%= p.title %></h3>
            <p class="muted"><%= p.category %></p>
            <p><%= p.caption || '' %></p>
          </div>
        </article>
      <% }) %>
    </div>
  </div>
</section>

