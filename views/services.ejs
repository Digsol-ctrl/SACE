<%- include('partials/header') %>


<style>

.services-hero {
  position: relative;
  background: linear-gradient(135deg, rgba(26, 74, 141, 0.9) 0%, rgba(0, 0, 0, 0.8) 100%),
              url('/images/construction_team.webp');
  background-size: cover;
  background-position: center;
  color: white;
  padding: 160px 0 100px;
  margin-top: 70px;
  text-align: center;
  overflow: hidden;
}

.services-hero::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: radial-gradient(circle at 80% 20%, rgba(255, 123, 0, 0.15) 0%, transparent 50%);
  z-index: 1;
}

.services-hero .container {
  position: relative;
  z-index: 2;
  max-width: 800px;
  margin: 0 auto;
  animation: fadeInUp 1s ease-out;
}

/* Breadcrumb */
.breadcrumb {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10px;
  margin-bottom: 30px;
  font-size: 0.9rem;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.breadcrumb a {
  color: rgba(255, 255, 255, 0.9);
  text-decoration: none;
  transition: all 0.3s ease;
  position: relative;
  padding: 5px 10px;
  border-radius: 4px;
}

.breadcrumb a:hover {
  color: var(--white);
  background: rgba(255, 123, 0, 0.2);
  transform: translateY(-2px);
}

.breadcrumb span {
  color: rgba(255, 255, 255, 0.6);
}

.breadcrumb span:last-child {
  color: var(--primary-orange);
  font-weight: 600;
}

/* Hero Title */
.services-hero h1 {
  font-size: 4rem;
  margin-bottom: 20px;
  color: var(--white);
  text-shadow: 0 4px 12px rgba(0, 0, 0, 0.3);
  line-height: 1.2;
  position: relative;
  display: inline-block;
}

.services-hero h1::after {
  content: '';
  position: absolute;
  bottom: -15px;
  left: 50%;
  transform: translateX(-50%);
  width: 100px;
  height: 4px;
  background: var(--primary-orange);
  border-radius: 2px;
}

.services-hero .lead {
  font-size: 1.3rem;
  line-height: 1.7;
  margin-bottom: 40px;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 300;
  max-width: 700px;
  margin-left: auto;
  margin-right: auto;
}

/* Main Content */
main.max-w-4xl {
  max-width: 1200px !important;
  margin: 0 auto;
  padding: 100px 20px;
}

/* Services Grid */
.grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
  gap: 40px;
  margin-top: 60px;
}

/* Service Card */
.service-card {
  background: white;
  border-radius: 20px;
  padding: 0 !important;
  border: none !important;
  box-shadow: 0 15px 40px rgba(0, 0, 0, 0.08);
  transition: all 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  position: relative;
  overflow: hidden;
  z-index: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.service-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 5px;
  background: linear-gradient(90deg, var(--primary-blue), var(--primary-orange));
  z-index: 2;
}

.service-card::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  background: radial-gradient(circle, rgba(26, 74, 141, 0.05) 0%, transparent 70%);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  transition: width 0.6s, height 0.6s;
  z-index: -1;
}

.service-card:hover {
  transform: translateY(-15px);
  box-shadow: 0 25px 60px rgba(0, 0, 0, 0.15);
}

.service-card:hover::after {
  width: 300px;
  height: 300px;
}

/* Service Icon */
.service-icon {
  width: 80px;
  height: 80px;
  background: linear-gradient(135deg, var(--primary-blue), var(--secondary-blue));
  border-radius: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 40px 40px 30px;
  color: white;
  font-size: 2rem;
  box-shadow: 0 10px 25px rgba(26, 74, 141, 0.3);
  transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  position: relative;
  overflow: hidden;
}

.service-card:hover .service-icon {
  transform: scale(1.1) rotate(5deg);
  box-shadow: 0 15px 35px rgba(26, 74, 141, 0.4);
  background: linear-gradient(135deg, var(--primary-orange), var(--secondary-orange));
}

.service-icon::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.7s ease;
}

.service-card:hover .service-icon::before {
  left: 100%;
}

/* Service Content */
.service-content {
  padding: 0 40px 40px;
  flex: 1;
  display: flex;
  flex-direction: column;
}

/* Service Title */
.service-title {
  font-size: 1.8rem !important;
  font-weight: 700 !important;
  margin-bottom: 20px !important;
  color: var(--dark-gray);
  line-height: 1.4;
  position: relative;
  padding-bottom: 15px;
  transition: color 0.3s ease;
}

.service-title::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 50px;
  height: 3px;
  background: var(--primary-blue);
  border-radius: 2px;
  transition: width 0.4s ease, background 0.3s ease;
}

.service-card:hover .service-title {
  color: var(--primary-blue);
}

.service-card:hover .service-title::after {
  width: 100px;
  background: var(--primary-orange);
}

/* Service Description */
.service-desc {
  font-size: 1.1rem !important;
  line-height: 1.8 !important;
  color: var(--medium-gray) !important;
  margin-bottom: 25px;
  transition: color 0.3s ease;
}

.service-card:hover .service-desc {
  color: var(--dark-gray);
}

/* Service Features */
.service-features {
  margin-top: 20px;
  margin-bottom: 25px;
  padding-left: 0;
  list-style: none;
}

.service-feature-item {
  margin-bottom: 12px;
  position: relative;
  padding-left: 35px;
  color: var(--medium-gray);
  line-height: 1.6;
  font-size: 1rem;
}

.service-feature-item i {
  position: absolute;
  left: 0;
  top: 3px;
  color: var(--primary-blue);
  font-size: 1.2rem;
  transition: color 0.3s ease;
}

.service-card:hover .service-feature-item i {
  color: var(--primary-orange);
}

/* Service CTA Button */
.service-cta {
  margin-top: auto;
  padding-top: 20px;
  border-top: 1px solid rgba(0, 0, 0, 0.05);
}

.service-btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 10px;
  padding: 12px 28px;
  background: transparent;
  color: var(--primary-blue);
  border: 2px solid var(--primary-blue);
  border-radius: 50px;
  font-family: var(--font-heading);
  font-weight: 600;
  font-size: 0.95rem;
  cursor: pointer;
  transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  text-decoration: none;
  position: relative;
  overflow: hidden;
  z-index: 1;
}

.service-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(26, 74, 141, 0.1), transparent);
  transition: left 0.7s ease;
  z-index: -1;
}

.service-btn:hover {
  background: var(--primary-blue);
  color: white;
  transform: translateY(-3px);
  box-shadow: 0 10px 25px rgba(26, 74, 141, 0.2);
}

.service-btn:hover::before {
  left: 100%;
}

.service-btn i {
  transition: transform 0.3s ease;
}

.service-btn:hover i {
  transform: translateX(5px);
}

/* Service Categories Filter */
.service-categories {
  display: flex;
  justify-content: center;
  gap: 15px;
  margin: 50px auto;
  flex-wrap: wrap;
  max-width: 800px;
  padding: 0 20px;
}

.category-btn {
  padding: 12px 28px;
  background: white;
  border: 2px solid var(--light-gray);
  border-radius: 50px;
  font-family: var(--font-heading);
  font-weight: 600;
  font-size: 0.95rem;
  color: var(--dark-gray);
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
  z-index: 1;
}

.category-btn::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  background: var(--primary-blue);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  transition: width 0.6s, height 0.6s;
  z-index: -1;
}

.category-btn:hover {
  color: white;
  border-color: var(--primary-blue);
  transform: translateY(-3px);
  box-shadow: 0 8px 20px rgba(26, 74, 141, 0.15);
}

.category-btn:hover::before {
  width: 300px;
  height: 300px;
}

.category-btn.active {
  background: var(--primary-blue);
  color: white;
  border-color: var(--primary-blue);
  box-shadow: 0 8px 20px rgba(26, 74, 141, 0.2);
  transform: translateY(-3px);
}

.category-btn.active::before {
  background: var(--secondary-blue);
  width: 300px;
  height: 300px;
}

/* Service Stats Section */
.services-stats {
  background: linear-gradient(135deg, var(--light-blue) 0%, var(--light-gray) 100%);
  border-radius: 30px;
  padding: 60px;
  margin: 100px auto;
  text-align: center;
  max-width: 1200px;
}

.stats-title {
  font-size: 2.5rem;
  color: var(--primary-blue);
  margin-bottom: 50px;
  position: relative;
  display: inline-block;
}

.stats-title::after {
  content: '';
  position: absolute;
  bottom: -15px;
  left: 50%;
  transform: translateX(-50%);
  width: 80px;
  height: 4px;
  background: var(--primary-orange);
  border-radius: 2px;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 40px;
  margin-top: 40px;
}

.stat-item {
  text-align: center;
}

.stat-number {
  font-size: 3.5rem;
  font-weight: 800;
  color: var(--primary-blue);
  margin-bottom: 10px;
  line-height: 1;
  font-family: var(--font-heading);
  position: relative;
  display: inline-block;
}

.stat-number::after {
  content: '+';
  font-size: 2rem;
  color: var(--primary-orange);
  position: absolute;
  top: 0;
  right: -20px;
}

.stat-label {
  color: var(--medium-gray);
  font-size: 1rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 1px;
}

/* CTA Section */
.services-cta {
  background: linear-gradient(135deg, var(--primary-blue), var(--secondary-blue));
  color: white;
  padding: 100px 0;
  text-align: center;
  border-radius: 30px;
  margin: 100px auto;
  position: relative;
  overflow: hidden;
  max-width: 1200px;
}

.services-cta::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: radial-gradient(circle at 30% 30%, rgba(255, 123, 0, 0.2) 0%, transparent 50%);
  z-index: 1;
}

.services-cta .container {
  position: relative;
  z-index: 2;
  max-width: 800px;
  margin: 0 auto;
  padding: 0 20px;
}

.services-cta h2 {
  font-size: 3rem;
  margin-bottom: 20px;
  color: var(--white);
}

.services-cta p {
  font-size: 1.3rem;
  margin-bottom: 40px;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 300;
  max-width: 700px;
  margin-left: auto;
  margin-right: auto;
}

.cta-buttons {
  display: flex;
  gap: 20px;
  justify-content: center;
  margin-top: 40px;
  flex-wrap: wrap;
}

.cta-btn-primary {
  padding: 18px 40px;
  background: var(--primary-orange);
  color: white;
  border: none;
  border-radius: 50px;
  font-family: var(--font-heading);
  font-weight: 600;
  font-size: 1.1rem;
  cursor: pointer;
  transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  box-shadow: 0 15px 35px rgba(255, 123, 0, 0.3);
  position: relative;
  overflow: hidden;
  z-index: 1;
  text-decoration: none;
  display: inline-block;
}

.cta-btn-primary::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.7s ease;
  z-index: -1;
}

.cta-btn-primary:hover {
  background: var(--secondary-orange);
  transform: translateY(-5px) scale(1.05);
  box-shadow: 0 20px 40px rgba(255, 123, 0, 0.4);
  color: white;
}

.cta-btn-primary:hover::before {
  left: 100%;
}

.cta-btn-secondary {
  padding: 18px 40px;
  background: transparent;
  color: white;
  border: 2px solid rgba(255, 255, 255, 0.3);
  border-radius: 50px;
  font-family: var(--font-heading);
  font-weight: 600;
  font-size: 1.1rem;
  cursor: pointer;
  transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  backdrop-filter: blur(10px);
  position: relative;
  overflow: hidden;
  z-index: 1;
  text-decoration: none;
  display: inline-block;
}

.cta-btn-secondary::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
  transition: left 0.7s ease;
  z-index: -1;
}

.cta-btn-secondary:hover {
  background: rgba(255, 255, 255, 0.1);
  border-color: white;
  transform: translateY(-5px);
  box-shadow: 0 15px 35px rgba(255, 255, 255, 0.1);
  color: white;
}

.cta-btn-secondary:hover::before {
  left: 100%;
}

/* Animation */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10px);
  }
}

/* Responsive Design */
@media (max-width: 1200px) {
  .grid {
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 30px;
  }
  
  .stats-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 30px;
  }
  
  .services-stats,
  .services-cta {
    margin-left: 20px;
    margin-right: 20px;
    max-width: calc(100% - 40px);
  }
}

@media (max-width: 992px) {
  .services-hero {
    padding: 140px 0 80px;
  }
  
  .services-hero h1 {
    font-size: 3.2rem;
  }
  
  .grid {
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 25px;
  }
  
  .services-stats {
    padding: 40px;
  }
  
  .services-cta {
    padding: 80px 0;
  }
  
  .services-cta h2 {
    font-size: 2.5rem;
  }
}

@media (max-width: 768px) {
  .services-hero {
    padding: 120px 0 60px;
    margin-top: 60px;
  }
  
  .services-hero h1 {
    font-size: 2.5rem;
  }
  
  .services-hero .lead {
    font-size: 1.1rem;
  }
  
  main.max-w-4xl {
    padding: 60px 20px;
  }
  
  .grid {
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 20px;
  }
  
  .service-icon {
    width: 70px;
    height: 70px;
    font-size: 1.8rem;
    margin: 30px 30px 20px;
  }
  
  .service-content {
    padding: 0 30px 30px;
  }
  
  .service-title {
    font-size: 1.6rem !important;
  }
  
  .service-categories {
    flex-direction: column;
    align-items: center;
  }
  
  .category-btn {
    width: 100%;
    max-width: 250px;
  }
  
  .stats-grid {
    grid-template-columns: 1fr;
    gap: 30px;
  }
  
  .services-cta h2 {
    font-size: 2rem;
  }
  
  .cta-buttons {
    flex-direction: column;
    align-items: center;
  }
  
  .cta-btn-primary,
  .cta-btn-secondary {
    width: 100%;
    max-width: 300px;
  }
}

@media (max-width: 576px) {
  .services-hero h1 {
    font-size: 2.2rem;
  }
  
  .grid {
    grid-template-columns: 1fr;
    gap: 25px;
  }
  
  .service-categories {
    gap: 10px;
  }
  
  .services-stats {
    padding: 30px 20px;
    margin-left: 15px;
    margin-right: 15px;
    max-width: calc(100% - 30px);
  }
  
  .services-cta {
    padding: 60px 20px;
    margin: 60px 15px;
    max-width: calc(100% - 30px);
  }
  
  .stat-number {
    font-size: 2.8rem;
  }
}

/* Dark Mode Support */
@media (prefers-color-scheme: dark) {
  .service-card {
    background: #2a2a2a;
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.2);
  }
  
  .service-title {
    color: #f0f0f0;
  }
  
  .service-desc {
    color: #a0a0a0 !important;
  }
  
  .service-feature-item {
    color: #a0a0a0;
  }
  
  .service-cta {
    border-top-color: rgba(255, 255, 255, 0.1);
  }
  
  .category-btn {
    background: #2a2a2a;
    border-color: #3a3a3a;
    color: #e0e0e0;
  }
  
  .services-stats {
    background: linear-gradient(135deg, #1a1a1a 0%, #2a2a2a 100%);
  }
  
  .stat-label {
    color: #a0a0a0;
  }
}
</style>

<!-- Services Hero Section -->
<section class="services-hero mt-3">
  <div class="container">
    <nav class="breadcrumb"><a href="/">Home</a> <span>/</span> <span>Our Services</span></nav>
    <h1>Our Services</h1>
    <p class="lead">Comprehensive construction and engineering solutions tailored to meet your specific needs. From concept to completion, we deliver excellence in every project.</p>
  </div>
</section>

<!-- Main Services Content -->
<main class="max-w-4xl mx-auto py-12">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <% 
      // Service icons mapping
      const serviceIcons = {
        'Residential Construction': 'home',
        'Commercial Construction': 'building',
        'Architectural Design': 'drafting-compass',
        'Project Management': 'hard-hat',
        'Renovation & Remodeling': 'tools',
        'Engineering Services': 'industry',
        'Interior Design': 'paint-roller',
        'Landscaping': 'tree',
        'Foundation Work': 'layer-group',
        'Roofing': 'home',
        'Electrical': 'bolt',
        'Plumbing': 'faucet'
      };
      
      // Service features mapping
      const serviceFeatures = {
        'Residential Construction': ['Custom home design', 'Home additions', 'Quality materials', 'Timely completion'],
        'Commercial Construction': ['Office buildings', 'Retail spaces', 'Restaurants', 'Warehouses'],
        'Architectural Design': ['3D visualization', 'Space planning', 'Sustainable design', 'Permit assistance'],
        'Project Management': ['Budget control', 'Schedule management', 'Quality assurance', 'Contractor coordination'],
        'Renovation & Remodeling': ['Kitchen remodeling', 'Bathroom upgrades', 'Whole-house renovations', 'Historic preservation'],
        'Engineering Services': ['Structural analysis', 'Foundation design', 'Seismic retrofitting', 'Code compliance']
      };
    %>
    
    <% services.forEach(s => { 
      const icon = serviceIcons[s.title] || 'hard-hat';
      const features = serviceFeatures[s.title] || [];
    %>
      <article class="service-card" data-category="<%= s.category || 'construction' %>">
        <div class="service-icon" aria-hidden="true">
          <i class="fas fa-<%= icon %>"></i>
        </div>
        <div class="service-content">
          <h2 class="service-title"><%= s.title %></h2>
          <p class="service-desc"><%= s.description %></p>

          <% if (features.length > 0) { %>
            <ul class="service-features">
              <% features.forEach(feature => { %>
                <li class="service-feature-item"><i class="fas fa-check-circle"></i> <%= feature %></li>
              <% }) %>
            </ul>
          <% } %>

          <!-- <div class="service-cta">
            <a href="/contact" class="service-btn" aria-label="Learn more about <%= s.title %>">
              Learn More <i class="fas fa-arrow-right"></i>
            </a>
          </div> -->
        </div>
      </article>
    <% }) %>
  </div>
</main>

<!-- Service Stats Section -->
<section class="services-stats">
  <div class="container">
    <h2 class="stats-title">Why Choose Us</h2>
    <div class="stats-grid">
      <div class="stat-item">
        <div class="stat-number">15</div>
        <div class="stat-label">Years Experience</div>
      </div>
      <div class="stat-item">
        <div class="stat-number">250</div>
        <div class="stat-label">Projects Completed</div>
      </div>
      <div class="stat-item">
        <div class="stat-number">50</div>
        <div class="stat-label">Expert Team Members</div>
      </div>
      <div class="stat-item">
        <div class="stat-number">100</div>
        <div class="stat-label">Client Satisfaction</div>
      </div>
    </div>
  </div>
</section>

<!-- CTA Section -->
<section class="services-cta">
  <div class="container">
    <h2>Ready to Start Your Project?</h2>
    <p>Contact us today for a free consultation and detailed quote. Let's build something amazing together!</p>
    <div class="cta-buttons">
